<!--pages/posts/post.wxml-->
<import src="post-item/post-item-template.wxml" />
<view>
  <swiper indicator-dots="{{indicatorDots}}" duration="{{duration}}" circular="{{circular}}" autoplay= "{{autoplay}}" interval="{{interval}}" vertical="{{vertical}}">
    <swiper-item><image src='/images/post/xiaolong.jpg'></image></swiper-item>
    <swiper-item><image src='/images/post/vr.png'></image></swiper-item>
  </swiper>

  <block wx:for="{{postcontent}}" wx:for-index="idx">
    <view catchtap = "gotopost" data-postid = "{{item.postId}}">
      <template is="post-item" data = "{{...item}}"></template>
    </view>
  </block>


</view>
